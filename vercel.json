{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    },
    {
      "src": "dist/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/index.js" }
  ],
  "env": {
    "BUILD_COMMAND": "npm install typescript && npm run build",
    "PROJECT_ROOT": "./dist",
    "INSTALL_COMMAND": "npm install",
    "PROD_COMMAND": "npm run prod"
  },
  "install": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}